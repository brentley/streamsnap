# Project identification
PROJECT_NAME=streamsnap
SERVICE_NAME=streamsnap
ENVIRONMENT=production

# Application Settings
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=production
PORT=5000

# Azure OpenAI Configuration (Required)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Cloudflare Tunnel (Optional - for external access)
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token

# YouTube Proxy Configuration (for AWS/cloud providers)
# Auto-proxy testing enabled by default - tests multiple free proxies
# Set YOUTUBE_DISABLE_PROXY=true to disable proxy entirely
# Set YOUTUBE_PROXY_URL to force a specific proxy
# YOUTUBE_PROXY_URL=http://us-ca.proxymesh.com:31280
# YOUTUBE_DISABLE_PROXY=false
# YOUTUBE_COOKIES_FILE=/app/cookies/youtube.txt  
# YOUTUBE_SOURCE_IP=192.168.1.100

# GitHub Container Registry Authentication
REPO_USER=brentley
REPO_PASS=your-github-personal-access-token

# Build Information (set by CI/CD)
GIT_COMMIT=unknown
BUILD_DATE=unknown
VERSION=1.0.0

# StreamSnap Settings (Optional - override defaults)
STREAMSNAP_SLACK_ENABLED=false
STREAMSNAP_SLACK_RESPONSE_FORMAT=document
STREAMSNAP_WHISPER_ENABLE_FALLBACK=true
STREAMSNAP_MAX_DURATION_SECONDS=3600